/**
 * Custom Script Menu - Google Sheets Menu Creation Script
 * 
 * This script creates custom menus in Google Sheets to provide easy access
 * to various barcode management and data processing functions.
 * 
 * Menu Structure:
 * 1. Bin Actions - Bin management operations
 * 2. Prep Bay Actions - Prep bay data processing
 * 3. Receiving - Receiving bay operations
 * 4. Generic Bay - Generic bay operations
 * 5. Other Scripts - Additional utility functions
 * 
 * Bin Actions Menu:
 * - Add Bin: Creates new bins with automatic numbering
 * - Remove Bin: Deletes bins and renumbers remaining ones
 * - Change Bin Name: Updates existing bin names
 * - Add Item to Existing Bin: Adds items to specific bins
 * - Remove Item From Existing Bin: Removes items from bins
 * - Swap Bins: Exchanges bin contents
 * - Add Many Items to Existing Bin: Bulk item addition
 * 
 * Prep Bay Actions Menu:
 * - Export Adds: Exports add barcode data
 * - Export Drops: Exports drop barcode data
 * - Ship Job: Processes prep bay for shipping
 * 
 * Receiving Menu:
 * - Sort Receiving Bay: Sorts barcodes by bin number
 * - Print Receiving Bay: Generates printable documents
 * - Export Receiving Bay: Exports data to CSV
 * - Reset Receiving Bay: Clears and processes bay data
 * 
 * Generic Bay Menu:
 * - Sort Generic Bay: Sorts barcodes by bin number
 * - Print Generic Bay: Generates printable documents
 * - Export Generic Bay: Exports data to CSV
 * - Reset Generic Bay: Clears and processes bay data
 * 
 * Other Scripts Menu:
 * - Sort Flawless Data: Consolidates equipment barcodes
 * - Search Barcode Dictionary: Searches barcode database
 * - Update Name Search Formula: Updates search formulas
 * - Update Bin Search Formula: Updates bin search formulas
 * - Refresh Analytics: Updates analytics data
 * - Refresh Homeless Gear Sheet: Updates homeless gear tracking
 * - Balance Cameras: Balances camera inventory
 * - Bulk Scan to Bin: Processes bulk scan data
 * 
 * Features:
 * - Organized menu structure
 * - Easy access to all functions
 * - Logical grouping of related operations
 * - User-friendly interface
 */
function onOpen() {
  const ui = SpreadsheetApp.getUi();
  
  // Create "Bin Actions" menu
  ui.createMenu('Bin Actions')
    .addItem('Add Bin', 'addBin')
    .addItem('Remove Bin', 'removeBinAndUpdate') 
    .addItem('Change Bin Name', 'changeBinName')
    .addItem('Add Item to Existing Bin', 'addToExistingBin')
    .addItem('Remove Item From Existing Bin', 'removeFromExistingBin')
    .addItem('Swap Bins', 'swapBins')
    .addItem('Add Many Items to Existing Bin', 'pasteClipboardIntoNewRows')
    .addToUi(); 



    ui.createMenu('Prep Bay Actions')
    .addItem('Export Adds', 'prepBayAddExport')
    .addItem('Export Drops', 'prepBayDropExport')
    .addItem('Ship Job', 'ShipPrepBay')
    .addToUi();

    // Create "Receiving" menu
    ui.createMenu('Receiving')
    .addItem('Sort Receiving Bay', 'sortReceivingBay')
    .addItem('Print Receiving Bay', 'printReceivingBay')
    .addItem('Export Receiving Bay', 'exportReceivingBay')
    .addItem('Reset Receiving Bay', 'resetReceivingBay')
    .addToUi();

    // Create "Generic Bay" menu
    ui.createMenu('Generic Bay')
    .addItem('Sort Generic Bay', 'sortGenericBay')
    .addItem('Print Generic Bay', 'printGenericBay')
    .addItem('Export Generic Bay', 'exportGenericBay')
    .addItem('Reset Generic Bay', 'resetGenericBay')
    .addToUi();

      // Create "Other Scripts" menu
  ui.createMenu('Other Scripts')
  .addItem('Sort Flawless Data', 'consolidateEquipmentBarcodes')
  .addItem('Search Barcode Dictionary', 'searchBarcodeDictionary')
  .addItem('Update Name Search Formula', 'updateNameSearch')
  .addItem('Update Bin Search Formula', 'updateBinSearch')
  .addItem('Refresh Analytics', 'countBarcodesAndPrint')
  .addItem('Refresh Homeless Gear Sheet', 'updateHomelessGearSheet')
  .addItem('Balance Cameras', 'balanceCameras')
  .addItem('Bulk Scan to Bin', 'bulkScanToBin')
  .addToUi();
}